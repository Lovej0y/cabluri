# Essential environment variables, to be sourced
# after "sudo -u <user>"
# Available environment: HOME, USER

# rwX------
umask 077
export LC_ALL=C


# Rely on pam_mktemp
if [ -z "${TMPDIR}" ]; then
    export TMPDIR=/tmp/.private/${USER}
fi


# Configuration directory
export XDG_CONFIG_HOME=${HOME}/config


# Some sanity checks
if [ "${HOME}" != /home/anon ]; then
    echo "This program should be run via sudo"
    exit 1
fi
