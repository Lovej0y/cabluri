#!/bin/sh -e

# Expecting environment: HOME, USER

umask 077
export LC_ALL=C

# Rely on pam_mktemp, which gets invoked
# by sudo in /etc/init.d/liberte
if [ -z "${TMPDIR}" ]; then
    export TMPDIR=/tmp/.private/${USER}
fi

export XDG_CONFIG_HOME=${HOME}/config
export SECURITY_HOME=${HOME}/persist/security
export RANDFILE=${TMPDIR}/openssl.rnd

# Proxy settings
export http_proxy=127.0.0.1:8118
export https_proxy=${http_proxy}


nginxflag=/var/lib/init.d/started/nginx

if [ ! -e ${nginxflag} ]; then
    :
fi

sleep 999999
